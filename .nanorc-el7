# ~/.nanorc

set autoindent
set const
#set multibuffer
set noconvert
set nohelp
#set showcursor
set smarthome
set smooth
#set stateflags
set suspend
set tabsize 2
set tabstospaces
#set trimblanks
#set zap

bind ^H justify main
#bind ^P chopwordleft all
#bind ^N chopwordright all
#bind ^F nextblock all
#bind ^B prevblock all
#bind M-1 cutfromcursor main
bind M-2 undo main
#bind M-X flipnewbuffer all
