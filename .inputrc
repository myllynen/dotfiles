# Readline options
set bell-style visible
#set completion-ignore-case on
set convert-meta off
set expand-tilde on
set input-meta on
set mark-directories on
set mark-symlinked-directories on
set match-hidden-files off
set output-meta on
set show-all-if-ambiguous on
set show-all-if-unmodified on
set visible-stats on

# Completion
TAB: menu-complete

# Key bindings for Linux/BSD/X11/Solaris
"\e[1~":   beginning-of-line
"\e[7~":   beginning-of-line
"\e[H":    beginning-of-line
"\e[214z": beginning-of-line
"\e[2~":   overwrite-mode
"\e[L":    overwrite-mode
"\e[247z": overwrite-mode
"\e[3~":   delete-char
$if term=sun
  "\C-?":  delete-char
$endif
$if term=freebsd
  "\C-?":  delete-char
$endif
"\e[4~":   end-of-line
"\e[8~":   end-of-line
"\e[F":    end-of-line
"\e[220z": end-of-line
"\C-f":    forward-word
"\e[1;5C": forward-word
"\e[5C":   forward-word
"\C-b":    backward-word
"\e[1;5D": backward-word
"\e[5D":   backward-word
"\C-u":    unix-line-discard
"\C-w":    backward-kill-word
